@model Ejar_new.Models.Apartment

@{
    ViewBag.Title = "Details";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>My Website</title>
</head>
<body>

    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 align-items-center">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="about-img position-relative overflow-hidden p-5 pe-0">
                        <img class="img-fluid w-100" src="~/img/@Html.DisplayFor(model => model.pictures)"/>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                    <h1 class="mb-4">#@Html.DisplayFor(model => model.apartment_id)</h1>
                    <p class="mb-4">Tempor erat elitr rebum at clita. Diam dolor diam ipsum sit. Aliqu diam amet diam et eos. Clita erat ipsum et lorem et sit, sed stet lorem sit clita duo justo magna dolore erat amet</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Space :@Html.DisplayFor(model => model.height) X @Html.DisplayFor(model => model.width)</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Number of bathroom : @Html.DisplayFor(model => model.bathroom)</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Number of room :  @Html.DisplayFor(model => model.room)</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Locatoin : @Html.DisplayFor(model => model.Area.area_name) , @Html.DisplayFor(model => model.address)</p>
                    <p><i class="fa fa-check text-primary me-3"></i>Price :  @Html.DisplayFor(model => model.price)</p>
                    <p class="btn btn-primary py-3 px-5 mt-3">@Html.ActionLink("Rent it", "Create", new { id = Model.apartment_id })</p>
                </div>
            </div>
        </div>
    </div>

</body>
</html>











